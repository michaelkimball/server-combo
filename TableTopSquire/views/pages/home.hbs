<script>
    var e1 = "";
    var e2 = "";
    var initialAppend = function(str){
        if(!e1.length){
            e1 = str;
        }else{
            if(!e2.length){
                e2 = str;
            }else{
                e1 += ", " + e2;
                e2 = str;
            }
        }
    };
    var finalAppend = function(){
        if(e2.length){
            e1 += " and " + e2;
        }
    };
    $(document).ready(function(){
        var from,message, firstname, lastname;
        $("#send_email").click(function(){
            from=$("#email").val();
            message=$("#message").val();
            firstname=$("#firstname").val();
            lastname=$("#lastname").val();

            if(!from){
                initialAppend("email");
            }
            if(!firstname){
                initialAppend("first name");
            }
            if(!lastname){
                initialAppend("last name");
            }
            if(!message){
                initialAppend("message");
            }
            finalAppend();
            if(!e1.length) {
                $.post("http://localhost/send", {
                    from: from,
                    message: message,
                    firstname: firstname,
                    lastname: lastname
                });
                $("#message").val('');
                alert("Message has been sent!")
            }else{
                alert("You must fill out " + e1);
                e1 = "";
                e2 = "";
            }
        });
    });
</script>