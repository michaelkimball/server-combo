{{!< html-struct}}

{{#contentFor 'pageScripts'}}
    <script type="text/javascript">
        function myFunction() {
            var formData = {
                'name': $('input[name=name]').val(),
                'grade_level': $('select[name=grade_level]').val(),
                'description': $('input[name=description]').val()
            };
            $.ajax({
                type: 'POST',
                data: formData,
                url: '/api/behavior/',
                dataType: 'json',
                encode: true,
                success: function (data) {
                    console.log(data);
                    console.log("Submitting: " + formData);
                }
            });
            alert("Behavior successfully created!");
        };
    </script>
{{/contentFor}}

<div class="col-md-6 col-md-offset-1 backgrnd padding20 margin20 see-through-container">

    <!--CLASS FORM-->
    <form name="topic-form" onsubmit="event.preventDefault(); myFunction();">

        <!--HEADER-->
        <div class="header">
            <!--TITLE--><h1>Topic Form</h1><!--END TITLE-->
        </div>
        <!--END HEADER-->

        <!--CONTENT-->
        <div>
            <input name="name" type="text" class="form-control" required="required" placeholder="Topic Name" /><br><br>
            <select name="grade_level" class="form-control" required="required">
                <option value="" disabled selected>--Grade Level--</option>
                <option value="0">K</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
            </select>
        </div>
        <!--END CONTENT-->

        <!--FOOTER-->
        <div class="flex-container flex-end">
            <!--ADD BEHAVIOR BUTTON--><input type="submit" name="submit" value="Add Topic" class="btn btn-success footer" /><!--END REGISTER BUTTON-->
        </div>
        <!--END FOOTER-->

    </form>
    <!--END LOGIN FORM-->

</div>